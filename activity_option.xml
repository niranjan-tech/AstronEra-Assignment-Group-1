<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/astro9"
    tools:context=".option">

    <!--text view to show heading-->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:background="@drawable/corner1"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Star Stuff"
        android:textAlignment="center"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:textSize="25dp" />

    <!--Button to go the telescope section-->
    <Button
        android:id="@+id/startstuff"
        android:layout_width="300dp"
        android:layout_height="217dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:background="@drawable/stars" />

    <!--text view to show heading-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner1"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:text="How To Buy A Telescope"
        android:textAlignment="center"
        android:textSize="25dp" />

    <!--Button to go the telescope section-->
    <Button
        android:id="@+id/telescope"
        android:layout_width="300dp"
        android:layout_height="217dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:background="@drawable/telescope"/>
</LinearLayout>