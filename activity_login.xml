<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/astro9"
    tools:context=".login">

    <!-- text view for heading -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="LearStars" />

    <!-- LinearLayout for white box -->
    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="437dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner"
        android:orientation="vertical">

        <!-- Edit text for email -->
        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:hint="  Login"
            android:inputType="textPersonName" />

        <!-- Edit text for password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="  Password"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:inputType="textPersonName" />

        <!-- button for login -->
        <Button
            android:id="@+id/login"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_design"
            android:layout_marginTop="20dp"
            android:text="Login" />

        <!--  textview for simple text -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Haven't registerd Yet?"
            android:textColor="#123456"
            android:textSize="20dp" />

        <!-- Edit text for signup button -->
        <Button
            android:id="@+id/button2"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_design"
            android:text="Sign Up" />
    </LinearLayout>

    <!-- ProgressBar for loading time  -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>